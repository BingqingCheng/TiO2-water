&GLOBAL
  PROJECT_NAME  H2O-TiO2
  RUN_TYPE      MD
  PRINT_LEVEL   LOW
  PREFERRED_DIAG_LIBRARY SL
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE NVT
    STEPS 0
    TIMESTEP 1.0
    TEMPERATURE 1
    &THERMOSTAT
      TYPE NOSE
      &CSVR
        TIMECON 1
      &END CSVR
    &END THERMOSTAT
  &END MD
  &PRINT
      &FORCES
       UNIT eV*angstrom^-1
      &END
      &TRAJECTORY
      &END
  &END PRINT
&END MOTION

&FORCE_EVAL
  METHOD QUICKSTEP
  &DFT
    BASIS_SET_FILE_NAME  BASIS_SET
    BASIS_SET_FILE_NAME  BASIS_MOLOPT
    POTENTIAL_FILE_NAME  POTENTIAL_UZH
    &QS
      EPS_DEFAULT 1.0E-12
      EPS_PGF_ORB 1.0E-14
    &END QS
    &SCF
      EPS_SCF 1.0E-4
      MAX_SCF 50
      &OT
        PRECONDITIONER FULL_ALL
      &END
      &OUTER_SCF
         EPS_SCF 1.0E-4
         MAX_SCF 3
      &END
      SCF_GUESS RESTART
    &END SCF
    &MGRID
      CUTOFF  350
      NGRIDS  3
    &END MGRID
&XC
  &XC_FUNCTIONAL
    &MGGA_X_SCAN
    &END
    &MGGA_C_SCAN
    &END
  &END XC_FUNCTIONAL
&END XC
  &END DFT
  &SUBSYS
    &CELL
      @INCLUDE init.ABC
    &END CELL
    &COORD
@INCLUDE 'init.xyz'
    &END COORD
&KIND H
  POTENTIAL GTH-SCAN-q1
  BASIS_SET DZVP-MOLOPT-SR-GTH
&END
&KIND O
  POTENTIAL GTH-SCAN-q6
  BASIS_SET DZVP-MOLOPT-SR-GTH
&END
&KIND Ti
  POTENTIAL GTH-SCAN-q12
  BASIS_SET DZVP-MOLOPT-SR-GTH
&END
  &END SUBSYS
&END FORCE_EVAL
